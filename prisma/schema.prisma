// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique
  passwordHash String
  userAuthToken String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role Roles @relation(fields: [roleId], references: [id])
  roleId Int

  ownedHomegame Homegames?

  HomegamesRead  Homegames[] @relation("UserToHomegames")

}

model Roles {
  id Int @id @default(autoincrement())
  name String @unique
  User User[]
}

model Homegames {
  id          Int      @id @default(autoincrement())
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String  @unique
  name        String  @unique

  players     Player[]

  games       Game[]

  readPlayers    User[]     @relation("UserToHomegames")


  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Game {
  id           Int      @id @default(autoincrement())
  homegame     Homegames @relation(fields: [homegameId], references: [id])
  homegameId   Int

  players      Player[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  scores       Score[]
}


model Player {
  id           Int      @id @default(autoincrement())
  game         Game[]

  homegame     Homegames @relation(fields: [homegameName], references: [name])
  homegameName String

  name         String

  scores       Score[]
  totalScore   Int

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([homegameName, name])
}

model Score {
  id Int @id @default(autoincrement())
  game Game @relation(fields: [gameId], references: [id])
  gameId Int
  player Player @relation(fields: [playerId], references: [id])
  playerId Int
  score Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}